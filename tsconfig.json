{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist", // Ensures compiled files go to the dist folder
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ], // Include all TypeScript files in the src folder
  "exclude": [
    "node_modules"
  ]
}